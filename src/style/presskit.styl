article#presskit
	padding 2em 5em 2em 4em
	text-align left
	width 100%
	margin: 4em 2em 1em 0em;
	box-shadow:0 0 0 1px black,0 0 0 5px #373450,0 0 0 6px black
	background c5
	position: relative;
	z-index: 5;

	.meta
		padding: 0 0 0 300px;
		z-index: 10;
		position relative

article#presskit h2
	margin 0 10px 0 0
	margin-bottom: 15px;
	display inline-block
	transition all linear 150ms


article#presskit a
	text-decoration none
	color c3
	&:hover
		color c4
.nova
	width 500px
	height 500px
	background-image url('../img/nova.png')
	position: absolute;
	left: 0;
	z-index: 2;
	top: 0;
	margin: -116px 0 0 -136px
	transform-origin: 265px 241px;
	animation: rotate2 50s linear infinite;
