article#chapters
	margin 3em 0 3em 0
	padding 1em 1em 3em 1em
	text-align center
	h1
		margin: 0 0 0.5em 0;
	ul
		text-align center
		li
			vertical-align: bottom;
			display inline-block
			width: 25%;
			margin 0 2em
			text-align left
			.content
				padding 1em 0 0 0
				min-height 50px
			.title
				box-shadow:0 0 0 1px black,0 0 0 5px #373450,0 0 0 6px black;
				padding 0.2em 1em
				margin 6px 0 6px 0
				background c1
				color c2
				text-align center
			.box
				background-size: auto 100%;
				border solid 1px rgba(0,0,0,0.2)
				height: 170px;
				box-shadow:0 0 0 1px black,0 0 0 5px #373450,0 0 0 6px black;
			.box#chap1
				background url('../img/c1.png') no-repeat top center
				background-size: auto 100%;
			.box#chap2
				background url('../img/c2.png') no-repeat top center
				background-size: auto 100%;
			.box#chap3
				background url('../img/c3.png') no-repeat top center
				background-size: auto 100%;